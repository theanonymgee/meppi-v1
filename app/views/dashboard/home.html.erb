<% content_for :title, "Dashboard Overview" %>

<div class="space-y-8">
  <header class="border-b border-border-color pb-4">
    <h1 class="font-display text-4xl font-bold text-text-primary">
      Dashboard Overview
    </h1>
  </header>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Total Phones</h2>
      <p class="text-3xl font-bold text-text-primary"><%= number_with_delimiter Phone.count %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Total Prices</h2>
      <p class="text-3xl font-bold text-text-primary"><%= number_with_delimiter Price.count %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Active Channels</h2>
      <p class="text-3xl font-bold text-text-primary"><%= number_with_delimiter Channel.active.count %></p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold mb-4">Countries Covered</h2>
      <p class="text-3xl font-bold text-text-primary"><%= number_with_delimiter Country.count %></p>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= link_to dashboard_channel_path, class: "btn btn--primary" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656-126-1.283-.356-1.857m0 0a5.002 5.002 0.019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Compare Channels
      <% end %>

      <%= link_to dashboard_competition_path, class: "btn btn--secondary" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20v-2c0-.656-126-1.283-.356-1.857m0 0a5.002 5.002 0.019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Market Analysis
      <% end %>

      <%= link_to dashboard_promotions_path, class: "btn btn--accent" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6 6m2 5a7 7 0 11-14 0 7 7 0 0114z"></path>
        </svg>
        Active Promotions
      <% end %>

      <%= link_to dashboard_regional_prices_path, class: "btn btn--secondary" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20v-2c0-.656-126-1.283-.356-1.857m0 0a5.002 5.002 0.019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Regional Prices
      <% end %>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-blue-50 border-l-4 border-blue-500 rounded-lg p-6 text-center">
      <h2 class="text-xl font-bold mb-2">Data Import Status</h2>
      <p class="text-text-secondary">Use the Rake task to import data from external sources</p>
    </div>
  </div>
</div>
