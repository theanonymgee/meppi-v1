<% content_for :title, "Dashboard Overview" %>

<div class="space-y-8">
  <!-- Page Header -->
  <header class="border-b border-border-color pb-4">
    <h1 class="font-display text-4xl font-bold text-text-primary">
      Dashboard Overview
    </h1>
    <p class="font-body text-text-secondary mt-2">
      <% if @dashboard[:overview][:latest_update] %>
        Last updated: <%= @dashboard[:overview][:latest_update].strftime("%B %d, %Y at %H:%M") %>
      <% else %>
        Real-time market intelligence
      <% end %>
    </p>
  </header>

  <!-- Error Display -->
  <% if @error %>
    <div class="alert alert--critical">
      <h3 class="font-display text-lg font-bold text-accent-red mb-2">Error Loading Dashboard</h3>
      <p class="font-body text-sm text-text-secondary"><%= @error[:message] %></p>
      <p class="font-body text-xs text-text-tertiary mt-1"><%= @error[:suggestion] %></p>
    </div>
    <% return %>
  <% end %>

  <!-- KPI Cards Row -->
  <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <%= render 'shared/kpi_card',
      label: "Total Phones",
      value: number_with_delimiter(@dashboard[:overview][:total_phones]) %>

    <%= render 'shared/kpi_card',
      label: "Price Data Points",
      value: number_with_delimiter(@dashboard[:overview][:total_prices]) %>

    <%= render 'shared/kpi_card',
      label: "Countries Covered",
      value: @dashboard[:overview][:countries_count].to_s %>

    <%= render 'shared/kpi_card',
      label: "Active Channels",
      value: @dashboard[:overview][:channels_count].to_s %>
  </section>

  <!-- Regional Alerts Section -->
  <% if @dashboard[:regional_gaps][:uae_violators].any? %>
  <section class="alert alert--critical">
    <h2 class="font-display text-xl font-bold text-accent-red mb-4 flex items-center gap-2">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
      </svg>
      Critical Price Violations (<%= @dashboard[:regional_gaps][:uae_violators].length %> cases)
    </h2>
    <p class="font-body text-sm text-text-secondary mb-4">
      The following phones are priced <%= DashboardConstants::CRITICAL_DISCOUNT_THRESHOLD %>% or more below UAE benchmark:
    </p>
    <div class="space-y-3 max-h-96 overflow-y-auto">
      <% @dashboard[:regional_gaps][:uae_violators].first(10).each do |violation| %>
        <div class="bg-bg-primary rounded p-3 border border-border-color">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <h3 class="font-body text-base font-semibold text-text-primary">
                <%= violation[:phone] %>
              </h3>
              <p class="font-body text-sm text-text-secondary">
                <%= violation[:country] %> &bull; <%= violation[:channel] %>
              </p>
            </div>
            <div class="text-right">
              <p class="font-mono text-lg font-bold text-accent-red">
                <%= violation[:discount_percent] %>%
              </p>
              <p class="font-body text-xs text-text-tertiary">Below benchmark</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% if @dashboard[:regional_gaps][:uae_violators].length > 10 %>
      <p class="font-body text-xs text-text-tertiary mt-3">
        Showing 10 of <%= @dashboard[:regional_gaps][:uae_violators].length %> violations. View Regional Benchmarks for full list.
      </p>
    <% end %>
  </section>
  <% end %>

  <!-- Price Trends Section -->
  <section class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Average Price by Country -->
    <div class="bg-bg-tertiary border border-border-color rounded p-6">
      <h2 class="font-display text-xl font-bold text-text-primary mb-4">
        Average Price by Country
      </h2>
      <div class="space-y-3 max-h-80 overflow-y-auto">
        <% @dashboard[:price_trends][:by_country].each do |country_data| %>
          <div class="flex items-center justify-between py-2 border-b border-border-color">
            <div class="flex-1">
              <p class="font-body text-sm font-medium text-text-primary">
                <%= country_data[:country] %>
              </p>
              <div class="flex items-center gap-2 mt-1">
                <% if country_data[:trend] == 'up' %>
                  <svg class="w-3 h-3 text-accent-red" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                  </svg>
                <% elsif country_data[:trend] == 'down' %>
                  <svg class="w-3 h-3 text-accent-green" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M14.707 12.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                <% end %>
                <span class="font-mono text-xs <%= country_data[:trend] == 'up' ? 'text-accent-red' : (country_data[:trend] == 'down' ? 'text-accent-green' : 'text-text-tertiary') %>">
                  <%= country_data[:trend].capitalize %>
                </span>
                <span class="font-mono text-xs text-text-tertiary">
                  (<%= country_data[:change_percent] %>%)
                </span>
              </div>
            </div>
            <p class="font-mono text-base font-semibold text-text-primary">
              $<%= number_with_delimiter(country_data[:avg_price], precision: 0) %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Top Price Movers -->
    <div class="bg-bg-tertiary border border-border-color rounded p-6">
      <h2 class="font-display text-xl font-bold text-text-primary mb-4">
        Top Price Movers (30 Days)
      </h2>
      <% if @dashboard[:price_trends][:top_movers].any? %>
        <div class="space-y-3 max-h-80 overflow-y-auto">
          <% @dashboard[:price_trends][:top_movers].each do |mover| %>
            <div class="flex items-center justify-between py-2 border-b border-border-color">
              <div class="flex-1">
                <p class="font-body text-sm font-medium text-text-primary">
                  <%= mover[:phone] %>
                </p>
                <p class="font-mono text-xs text-text-tertiary mt-1">
                  $<%= number_with_delimiter(mover[:previous_price], precision: 0) %> &rarr; $<%= number_with_delimiter(mover[:current_price], precision: 0) %>
                </p>
              </div>
              <div class="text-right">
                <span class="badge <%= mover[:change_percent] < 0 ? 'badge--status-normal' : 'badge--status-critical' %>">
                  <%= mover[:change_percent] > 0 ? '+' : '' %><%= mover[:change_percent] %>%
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="font-body text-sm text-text-secondary text-center py-8">
          No significant price movements in the selected period.
        </p>
      <% end %>
    </div>
  </section>

  <!-- Quick Actions -->
  <section class="bg-bg-secondary border border-border-color rounded p-6">
    <h2 class="font-display text-xl font-bold text-text-primary mb-4">Quick Actions</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%= link_to dashboard_channel_path(phone_id: Phone.first&.id), class: "btn btn--secondary flex items-center justify-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Compare Channels
      <% end if Phone.any? %>

      <%= link_to dashboard_competition_path, class: "btn btn--secondary flex items-center justify-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        Market Analysis
      <% end %>

      <%= link_to dashboard_search_path, class: "btn btn--primary flex items-center justify-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        Semantic Search
      <% end %>
    </div>
  </section>
</div>
