<!-- Header - MEPPI Branding -->
<header class="bg-bg-secondary border-b border-border-color">
  <div class="container mx-auto px-4 py-6">
    <div class="flex items-center justify-between">
      <!-- Logo & Title -->
      <div class="flex items-center gap-4">
        <div class="w-10 h-10 bg-accent-blue rounded flex items-center justify-center">
          <span class="font-display text-xl font-bold text-text-inverse">M</span>
        </div>
        <div>
          <h1 class="font-display text-2xl font-bold text-text-primary">
            MEPPI
          </h1>
          <p class="font-body text-sm text-text-secondary">
            Strategic Intelligence Dashboard
          </p>
        </div>
      </div>

      <!-- Header Actions -->
      <div class="flex items-center gap-4">
        <!-- Quick Search -->
        <div class="relative">
          <input
            type="search"
            placeholder="Quick search..."
            class="font-body text-sm bg-bg-primary border border-border-color rounded px-4 py-2 w-64 focus:outline-none focus:ring-2 focus:ring-accent-blue"
            data-controller="search"
            data-action="keydown->search#onEnter"
          >
          <svg class="absolute right-3 top-2.5 w-4 h-4 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>

        <!-- Health Status -->
        <div class="flex items-center gap-2">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-green opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-accent-green"></span>
          </span>
          <span class="font-body text-xs text-text-secondary">System Online</span>
        </div>
      </div>
    </div>
  </div>
</header>
