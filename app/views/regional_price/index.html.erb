<div class="min-h-screen bg-white text-gray-900" data-controller="regional-price">
  <header class="border-b border-gray-200 px-4 py-3">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-2xl font-serif text-blue-700">Regional Price Comparison</h1>
      <p class="text-sm text-gray-600 mt-2">Compare prices across countries vs <%= @base_country&.name %> benchmark</p>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 py-6">
    <%# Summary statistics %>
    <% if @regional_data[:summary] %>
      <div class="mb-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h2 class="text-lg font-serif mb-4 text-blue-900">Summary Statistics</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div>
            <p class="text-sm text-gray-600">Benchmark (<%= @base_country&.name %>)</p>
            <p class="text-2xl font-bold text-blue-700">
              <%= number_to_currency(@regional_data[:summary][:base_price]) %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-600">Highest Average</p>
            <p class="text-2xl font-bold text-red-700">
              <%= number_to_currency(@regional_data[:summary][:highest]) %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-600">Lowest Average</p>
            <p class="text-2xl font-bold text-green-700">
              <%= number_to_currency(@regional_data[:summary][:lowest]) %>
            </p>
          </div>
          <div>
            <p class="text-sm text-gray-600">Overall Average</p>
            <p class="text-2xl font-bold text-gray-900">
              <%= number_to_currency(@regional_data[:summary][:avg_price]) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <%# Country comparison table %>
    <div class="mb-8">
      <h2 class="text-lg font-serif mb-4 text-blue-700">Price Comparison by Country</h2>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 border border-gray-300 rounded-lg overflow-hidden">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Country</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Average Price</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Difference</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">vs <%= @base_country&.name %></th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-900 uppercase tracking-wider">Status</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @regional_data[:comparisons].each do |comparison| %>
              <tr>
                <td class="px-4 py-3 whitespace-nowrap font-medium text-gray-900">
                  <%= comparison[:country] %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-gray-700">
                  <%= number_to_currency(comparison[:avg_price]) %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap">
                  <% if comparison[:price_diff].positive? %>
                    <span class="text-red-600 font-medium">+<%= number_to_currency(comparison[:price_diff].abs) %></span>
                  <% elsif comparison[:price_diff].negative? %>
                    <span class="text-green-600 font-medium">-<%= number_to_currency(comparison[:price_diff].abs) %></span>
                  <% else %>
                    <span class="text-gray-500">-</span>
                  <% end %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap text-gray-700">
                  <% if comparison[:price_percent].positive? %>
                    +<%= comparison[:price_percent] %>%
                  <% elsif comparison[:price_percent].negative? %>
                    -<%= comparison[:price_percent].abs %>%
                  <% else %>
                    0%
                  <% end %>
                </td>
                <td class="px-4 py-3 whitespace-nowrap">
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium
                    <%= case comparison[:status]
                      when 'critical' then 'bg-red-100 text-red-800'
                      when 'warning' then 'bg-yellow-100 text-yellow-800'
                      when 'cheaper' then 'bg-green-100 text-green-800'
                      else 'bg-gray-100 text-gray-800' %>">
                    <%= comparison[:status].humanize %>
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# Price distribution chart %>
    <div class="mb-8">
      <h2 class="text-lg font-serif mb-4 text-blue-700">Price Distribution</h2>
      <div class="border border-gray-200 rounded-lg p-6">
        <p class="text-center text-gray-500">Visual representation would go here</p>
        <p class="text-xs text-gray-400 mt-2">Chart implementation pending</p>
      </div>
    </div>
  </main>
</div>
